    <% layout('./layout/boilerplate') %> 
    <div id="map"  style="width: 100%; height: 500px;margin-bottom: 30px;"></div>
    <h1> All Campgrounds</h1>
    <% for(let ca of camps) {%>
        
        <div class="card mb-3" >
          <div class="row">  
            <div class="col-md-3 ">
            <img src="<%=ca.image[0].url%> " class="img-fluid" alt="Image" height="300px" width="300px" ></div>
            <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= ca.title %> </h5>
              <p class="card-text"><%= ca.description %> </p>
              <p class="card-text"><small class="text-muted" ><%= ca.location %> </small></p>
              
              <a href="/campgrounds/<%=ca._id%> " class="btn btn-primary">Know More !</a>
            </div>
          </div>
        </div>
    </div>
        


        
